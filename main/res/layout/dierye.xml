<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >

            <Button
                android:text="经文"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/button11"
                android:layout_weight="1"
                android:textSize="40sp"
                android:onClick="dianjirenming11" />

            <Button
                android:text="四嫂"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/button12"
                android:layout_weight="1"
                android:textSize="40sp"
                android:onClick="dianjirenming12" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >

            <Button
                android:text="大哥"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/button13"
                android:layout_weight="1"
                android:textSize="40sp"
                android:onClick="dianjirenming13" />

            <Button
                android:text="广盛"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/button14"
                android:layout_weight="1"
                android:textSize="40sp"
                android:onClick="dianjirenming14" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >

            <Button
                android:text="广茂"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/button15"
                android:layout_weight="1"
                android:textSize="40sp"
                android:onClick="dianjirenming15" />

            <Button
                android:text="运羲"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/button16"
                android:layout_weight="1"
                android:textSize="40sp"
                android:onClick="dianjirenming16" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:text="上一页"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/button17"
                android:layout_weight="1"
                android:textSize="20sp"
                android:onClick="shangyiye1" />

            <TextView
                android:text="第2页"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/textView2"
                android:layout_weight="1"
                android:textStyle="normal|bold"
                android:textAlignment="center"
                android:textSize="30sp"
                android:gravity="center"/>

            <Button
                android:text="下一页"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/button18"
                android:layout_weight="1"
                android:textSize="20sp"
                android:onClick="xiayiye1" />
        </TableRow>
    </TableLayout>
</LinearLayout>